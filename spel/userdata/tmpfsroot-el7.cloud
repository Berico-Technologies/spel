#cloud-config

##############################################################################
#
# Set the default cloud-init user to `spel` and update packages
#
##############################################################################
system_info:
  default_user:
    name: spel
    gecos: spel admin account
    lock_passwd: true
    sudo: ["ALL=(root) NOPASSWD:ALL"]

bootcmd:
  - setenforce 0

package_upgrade: true

